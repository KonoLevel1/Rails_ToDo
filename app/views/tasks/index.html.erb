<h1>タスク一覧</h1>

<%= link_to '新規作成', new_task_path %>
<table>
    <thead>
        <tr>
            <th>タスク</th>
            <th>詳細</th>
        </tr>
    </thead>
    <tbody>
        <% @tasks.each do |task| %>
        <tr>
            <td>
                <%= task.title %>
            </td>
            <td>
                <%= task.body %>
            </td>
            <td>
                <%= button_to '編集', edit_task_path(task) %>
            </td>
            <td>
                <%= button_to '削除', task, method: :delete, data: { confirm: 'You sure?' } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>