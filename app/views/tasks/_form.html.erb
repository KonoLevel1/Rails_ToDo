<%= form_with model: task do |form| %>
    <div>
        <%= form.label :タスク %><br>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :詳細 %><br>
        <%= form.text_area :body %>
    </div>

    <div>
        <%= form.submit %>
    </div>
    
    <%= link_to "タスク一覧へ", tasks_path %>
<% end %>